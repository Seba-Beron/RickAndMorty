<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:RickAndMorty.Models"
             xmlns:vm="clr-namespace:RickAndMorty.ViewModels"
             x:DataType="vm:LocationDetailViewModel"
             x:Class="RickAndMorty.Views.LocationDetailPage"
             Title="LocationDetailPage">
    
    <VerticalStackLayout>
        <Label 
            Text="{Binding Location.name}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
        />
    </VerticalStackLayout>
    
</ContentPage>