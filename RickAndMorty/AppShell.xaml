<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RickAndMorty.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RickAndMorty"
    Shell.FlyoutBehavior="Flyout"
    xmlns:views="clr-namespace:RickAndMorty.Views"
    xmlns:info="clr-namespace:Microsoft.Maui.ApplicationModel;assembly=Microsoft.Maui.Essentials"
    Title="RickAndMorty">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <FlyoutItem Title="RickAndMorty">
        <Tab Title="Characters">
            <ShellContent
                Title="Characters"
                ContentTemplate="{DataTemplate views:CharactersListPage}"
                Route="CharactersListPage"
            />
        </Tab>
        <Tab Title="Episodes">
            <ShellContent
                Title="Episodes"
                ContentTemplate="{DataTemplate views:EpisodesListPage}"
                Route="EpisodesListPage"
            />
        </Tab>
        <Tab Title="Locations">
            <ShellContent
                Title="Locations"
                ContentTemplate="{DataTemplate views:LocationsListPage}"
                Route="LocationsListPage"
            />
        </Tab>
    </FlyoutItem>


</Shell>
